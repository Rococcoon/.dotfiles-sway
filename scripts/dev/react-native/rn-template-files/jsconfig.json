{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-native",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/react-native-safe-area-context/**/*",
    "src/types/declarations.d.ts",
    "assets/images", 
    "assets/icons"
  ]
}
